"load default (cli) settings/mappings
source $VIM_PATH/config/settings
source $VIM_PATH/config/mappings
source $VIM_PATH/config/commands
source $VIM_PATH/config/functions
source $VIM_PATH/config/statusline

if has("gui_running") && isdirectory("$VIM_PATH/config/gui")
  source $VIM_PATH/config/gui/settings
  source $VIM_PATH/config/gui/functions
  source $VIM_PATH/config/gui/mappings
  source $VIM_PATH/config/gui/commands
  source $VIM_PATH/config/gui/statusline
endif

"load local override settings for the user
if isdirectory("$VIM_PATH/config/$USER")
  source $VIM_PATH/config/$USER/settings
  source $VIM_PATH/config/$USER/functions
  source $VIM_PATH/config/$USER/mappings
  source $VIM_PATH/config/$USER/commands
  source $VIM_PATH/config/$USER/statusline
end

